{% extends "main.j2" %}

{% block head %}
    {{ super() }}
{% endblock %}

{% block main %}

    <div class="p-2">
        {% with messages = get_flashed_messages() %}
        {% if messages %}
        <ul class="mx-auto">
            {% for message in messages %}
            <li class="mx-auto">{{ message }}</li>
            {% endfor %}
        </ul>
        {% endif %}
        {% endwith %}
    </div>

    <div class="p-2">
        <h1>My Adventures!</h1>
    </div>
    {% for name in campaigns %}
    <div class="p-2">
        <h2><a href="{{ url_for('campaignView', campaign=name) }}">{{ name }}</a></h2>
    </div>
    {% endfor %}  

{% endblock %}

{% block content %}
    {{ super() }}
{% endblock %}
